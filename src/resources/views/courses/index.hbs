<div class="container">
    <div class="row mt-4">
        {{#each courses}}
        <div class="col col-xl-3">
            <div class="card">
                <a href="courses/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top">
                </a>
                <div class="card-body">
                    <a href="courses/{{this.slug}}"><h5 class="card-title">{{this.name}}</h5></a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">FREE</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>